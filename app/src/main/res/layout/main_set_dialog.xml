<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="384dp"
    android:layout_height="249dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:background="@drawable/layout_border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="#333399">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="设置"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/set_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45dp"
        android:layout_marginLeft="@dimen/length_20dp"
        android:layout_marginRight="@dimen/length_20dp"
        android:layout_marginTop="@dimen/length_20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/tertiary_text_dark"
            android:text="IP地址"
            android:gravity="center"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/text_ipadress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.31"
            android:background="@drawable/smartcampus_edit_bg"
            android:textColor="@color/passw"
            android:textSize="15sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45dp"
        android:layout_marginLeft="@dimen/length_20dp"
        android:layout_marginRight="@dimen/length_20dp"
        android:layout_marginTop="@dimen/length_10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/tertiary_text_dark"
            android:text="端口号"
            android:gravity="center"
            android:textSize="15sp"

            />
        <EditText
            android:id="@+id/text_port"
            android:layout_width="0dp"
            android:layout_weight="2.31"
            android:layout_height="match_parent"
            android:textColor="@color/passw"
            android:background="@drawable/smartcampus_edit_bg"
            android:textSize="15sp"
            />
    </LinearLayout>
    
